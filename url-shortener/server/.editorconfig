# Editor configuration, see https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 120
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
insert_final_newline = false
max_line_length = off
trim_trailing_whitespace = false
